{
    "editor.fontFamily": "PT Mono Bold",
    "workbench.iconTheme": "vscode-great-icons",
    "editor.fontWeight": "600",
    "editor.fontSize": 13,
    "editor.lineHeight": 0,
    "editor.lineNumbers": "off",
    "editor.renderLineHighlight": "none",
    "editor.showFoldingControls": "never",
    "editor.guides.indentation": false,
    "editor.matchBrackets": "never",
    "terminal.integrated.fontFamily": "Pt Mono Bold",
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.lineHeight": 1,
    "terminal.integrated.fontWeight": "bold",
    "editor.fontVariations": false,
    "editor.fontLigatures": false,
    "terminal.integrated.sendKeybindingsToShell": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.organizeImports": "always",
        "source.sortMembers": "always"
    },
    "explorer.compactFolders": false,
    "redhat.telemetry.enabled": false,
    "java.jdt.ls.java.home": "/opt/java/jdk",
    "redHatDependencyAnalytics.mvn.executable.path": "/opt/java/apache-maven/bin/mvn",
    "workbench.colorTheme": "just-eclipse-color-theme",
    "git.confirmSync": false
}