<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<preferences>
    <time_format>HH:mm:ss</time_format>
    <quit_confirmation>true</quit_confirmation>
    <show_splash_screen>true</show_splash_screen>
    <preferred_encodings>UTF-8,UTF-16,ISO-8859-1,windows-1252,KOI8-R,Big5,GB18030,EUC-KR,Shift_JIS,EUC-JP</preferred_encodings>
    <check_for_updates_on_startup>true</check_for_updates_on_startup>
    <language>ru</language>
    <filename_locale>en</filename_locale>
    <show_keyboard_hints>true</show_keyboard_hints>
    <display_compact_file_size>true</display_compact_file_size>
    <lookAndFeel>com.formdev.flatlaf.FlatDarkLaf</lookAndFeel>
    <change_drop_action_to_copy>true</change_drop_action_to_copy>
    <date_format>yyyy/dd/MM</date_format>
    <enable_system_notifications>false</enable_system_notifications>
    <date_separator>/</date_separator>
    <auto_refresh>
        <wait_after_refresh>10000</wait_after_refresh>
        <check_period>3000</check_period>
    </auto_refresh>
    <mail>
        <smtp_port>25</smtp_port>
    </mail>
    <log>
        <level>WARNING</level>
        <buffer_size>200</buffer_size>
    </log>
    <status_bar>
        <visible>true</visible>
    </status_bar>
    <bonjour>
        <discovery_enabled>false</discovery_enabled>
    </bonjour>
    <toolbar>
        <icon_scale>1.0</icon_scale>
        <visible>true</visible>
    </toolbar>
    <progress_dialog>
        <expanded>true</expanded>
        <close_when_finished>true</close_when_finished>
    </progress_dialog>
    <command_bar>
        <icon_scale>1.0</icon_scale>
        <visible>true</visible>
    </command_bar>
    <view_on_error>
        <enabled>false</enabled>
    </view_on_error>
    <shell>
        <use_custom_shell>true</use_custom_shell>
        <custom_shell>/bin/zsh</custom_shell>
    </shell>
    <startup_folder>
        <on_startup>lastFolders</on_startup>
        <custom_folders>
            <left>/home/pk</left>
            <right>/home/pk</right>
        </custom_folders>
    </startup_folder>
    <theme>
        <type>user</type>
    </theme>
    <file_table>
        <icon_scale>1.0</icon_scale>
        <show_single_tab_header>false</show_single_tab_header>
        <cd_follows_symlinks>true</cd_follows_symlinks>
        <show_parent_folder>true</show_parent_folder>
        <show_system_folders>true</show_system_folders>
        <use_system_file_icons>applications</use_system_file_icons>
        <quick_search_timeout>2</quick_search_timeout>
        <show_hidden_files>true</show_hidden_files>
        <show_ds_store_files>true</show_ds_store_files>
        <auto_size_columns>true</auto_size_columns>
        <show_folders_first>true</show_folders_first>
    </file_table>
</preferences>
